<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkingControl.Mobile.Views.Reporting.PanoramaPicturingPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <StackLayout VerticalOptions="Start">
                    <Frame BackgroundColor="Orange" Padding="24">
                        <Label Text="Take a violation panorama" HorizontalTextAlignment="Center"
                            TextColor="White" FontSize="24"/>
                    </Frame>

                    <Button Text="Pick Image" Clicked="PickImageButton_Clicked"/>
                    <Button Text="Take Image" Clicked="TakeImageButton_Clicked"/>
                    <Image x:Name="resultImage"/>
                </StackLayout>
                <StackLayout VerticalOptions="EndAndExpand" 
                             HorizontalOptions="Center" Orientation="Horizontal">
                    <Button Text="Cancel" Clicked="CancelButton_Clicked"/>
                    <Button Text="Next step" Clicked="NextStepButton_Clicked"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>